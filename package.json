{
  "name": "prompt-expert-mcp",
  "version": "1.0.0",
  "description": "MCP server for prompt optimization and management with Langfuse integration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:typecheck": "vitest typecheck",
    "test:bench": "vitest bench --run",
    "typecheck": "tsc --noEmit",
    "type-coverage": "type-coverage --at-least 94",
    "lint": "eslint . --ext .ts",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "clean": "rm -rf dist coverage .nyc_output test-results.* docs/api"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.3.1",
    "langfuse": "^3.6.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "memfs": "^4.14.0",
    "msw": "^2.7.0",
    "tsx": "^4.20.4",
    "type-coverage": "^2.29.7",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "vite": "^5.4.0",
    "vitest": "^2.1.8",
    "winston": "^3.17.0"
  }
}
